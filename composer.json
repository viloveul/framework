{
    "name": "viloveul-project/framework",
    "description": "Viloveul framework. Designed for API",
    "type": "project",
    "license": "MIT",
    "keywords": ["zafex", "viloveul", "fajrulaz", "framework", "bundle", "project"],
    "homepage": "http://www.viloveul.com",
    "readme": "README.MD",
    "authors": [{
        "name": "Fajrul Akbar Zuhdi",
        "email": "fajrulaz@gmail.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "illuminate/database": "v5.*",
        "phpmailer/phpmailer": "^6.0",
        "ramsey/uuid": "^3.8",
        "viloveul/auth": "1.0.*|v1.x-dev",
        "viloveul/cache": "1.0.*|v1.x-dev",
        "viloveul/config": "1.0.*|v1.x-dev",
        "viloveul/console": "1.0.*|v1.x-dev",
        "viloveul/container": "1.0.*|v1.x-dev",
        "viloveul/event": "1.0.*|v1.x-dev",
        "viloveul/http": "1.0.*|v1.x-dev",
        "viloveul/media": "1.0.*|v1.x-dev",
        "viloveul/middleware": "1.0.*|v1.x-dev",
        "viloveul/pagination": "1.0.*|v1.x-dev",
        "viloveul/router": "1.0.*|v1.x-dev",
        "viloveul/support": "1.0.*|v1.x-dev",
        "viloveul/transport": "1.0.*|v1.x-dev",
        "viloveul/validation": "1.0.*|v1.x-dev"
    },
    "require-dev": {
        "codeception/codeception": "2.5.*"
    },
    "scripts": {
        "fresh": [
            "rm -f var/private.pem var/public.pem"
        ],
        "bootstrap": [
            "mkdir -p public/uploads",
            "cp -n config/envi.env .env"
        ],
        "genrsakey": [
            "openssl genrsa -out var/private.pem -aes256 4096",
            "openssl rsa -pubout -in var/private.pem -out var/public.pem"
        ],
        "post-create-project-cmd": [
            "@fresh",
            "@bootstrap"
        ]
    }
}
